@model CRUD_Using_Repository.Models.User
@{
    ViewData["Title"] = "Filter";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 border border-3 rounded shadow-lg p-4 bg-light">
            <h3 class="text-center text-primary mb-4">Product Category</h3>
            <form method="post" asp-action="Search Product" class="text-center">
                <div class="d-flex justify-content-around">
                    <a class="btn btn-outline-primary btn-sm" asp-controller="User" asp-action="ProductCategory">
                        Search by Category
                    </a>
                    <a class="btn btn-outline-success btn-sm" asp-controller="User" asp-action="ProductPrice">
                        Search by Price
                    </a>
                    <a class="btn btn-outline-dark btn-sm" asp-controller="User" asp-action="ProductStock">
                        Search by Stock
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

