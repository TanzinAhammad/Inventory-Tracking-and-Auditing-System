@model IEnumerable<Inventory.Models.AuditLogs>
@{
    ViewData["Title"] = "AuditLogs";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Audit Logs</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover table-striped table-bordered mb-0">
                        <thead class="text-center bg-dark text-light">
                            <tr>
                                <th>Product Id</th>
                                <th>Product Name</th>
                                <th>TimeStamp</th>
                                <th>Change Type</th>
                                <th>Quantity</th>
                                <th>User Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model)
                            {
                                <tr class="text-center">
                                    <td>@d.ProductId</td>
                                    <td>@d.ProductName</td>
                                    <td>@d.TimeStamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                    <td>
                                        <span class="badge @(d.ChangeType == "Addition" ? "bg-success" : "bg-warning")">
                                            @d.ChangeType
                                        </span>
                                    </td>
                                    <td>@d.Quantity</td>
                                    <td>@d.UserName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>