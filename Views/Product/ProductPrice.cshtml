@model IEnumerable<Inventory.Models.Product>
@{
    ViewData["Title"] = "ProductPrice";
}

<div class="container py-4">
    <div class="row">

        <div class="col-10 offset-1">

            <!-- Price Range Filter -->
            <div class="row mb-3">
                <div class="col-12 d-flex justify-content-center">
                    <div class="row">
                        <div class="col-4">
                            <input type="number" id="minPrice" class="form-control" placeholder="Min Price" min="0" />
                        </div>
                        <div class="col-4">
                            <input type="number" id="maxPrice" class="form-control" placeholder="Max Price" min="0" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Product Table -->
            <table class="table table-hover table-striped table-bordered">
                <thead class="text-center bg-dark text-light">
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>SKU</th>
                        <th>Stock</th>
                        <th>Price($)</th>
                        <th>Category</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr class="text-center">
                            <td>@d.ProductId</td>
                            <td>@d.ProductName</td>
                            <td>@d.SKU</td>
                            <td>@d.Stock</td>
                            <td>@d.Price</td>
                            <td>@d.Category</td>

                            <td>
                                <a class="btn btn-sm btn-primary m-1" asp-controller="Product" asp-action="Edit" asp-route-id="@d.ProductId">Edit</a>
                                <a class="btn btn-sm btn-danger m-1" asp-controller="Product" asp-action="DeleteRecord" asp-route-id="@d.ProductId" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    <script src="/js/price.js"></script>
}